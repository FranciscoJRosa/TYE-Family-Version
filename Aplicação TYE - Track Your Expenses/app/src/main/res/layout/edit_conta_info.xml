<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/txt_editDesignacaoConta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/txt_design"
        android:drawableRight="@drawable/ic_mode_edit_black_24dp"
        android:ems="10"
        android:hint="Designação da conta"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_editSaldoConta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/txt_design"
        android:drawableRight="@drawable/ic_mode_edit_black_24dp"
        android:ems="10"
        android:layout_marginTop="55dp"
        android:hint="Saldo da conta"
        android:inputType="numberDecimal" />





</RelativeLayout>